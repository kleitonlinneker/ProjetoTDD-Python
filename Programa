class Sistema:
    def __init__(self):
        self.produtos = []

    def adicionar_produto(self, codigo, nome, fornecedor, descricao):
        # Verifica se o código do produto já existe
        if self.produto_existe(codigo):
            return False, "Código de produto já existente"

        # Cria um novo produto
        novo_produto = {
            "codigo": codigo,
            "nome": nome,
            "fornecedor": fornecedor,
            "descricao": descricao
        }

        # Adiciona o produto à lista de produtos
        self.produtos.append(novo_produto)
        return True, "Produto adicionado com sucesso"

    def deletar_produto(self, codigo):
        # Verifica se o produto existe
        if not self.produto_existe(codigo):
            return False, "Produto não encontrado"

        # Remove o produto da lista de produtos
        for produto in self.produtos:
            if produto["codigo"] == codigo:
                self.produtos.remove(produto)
                return True, "Produto deletado com sucesso"

    def fazer_update_produto(self, codigo, novo_nome, novo_fornecedor, nova_descricao):
        # Verifica se o produto existe
        if not self.produto_existe(codigo):
            return False, "Produto não encontrado"

        # Atualiza as informações do produto
        for produto in self.produtos:
            if produto["codigo"] == codigo:
                produto["nome"] = novo_nome
                produto["fornecedor"] = novo_fornecedor
                produto["descricao"] = nova_descricao
                return True, "Produto atualizado com sucesso"

    def listar_produtos(self):
        # Verifica se há produtos cadastrados
        if len(self.produtos) == 0:
            return "Nenhum produto cadastrado"

        # Exibe todos os produtos e seus atributos
        for produto in self.produtos:
            print(f"Código: {produto['codigo']}")
            print(f"Nome: {produto['nome']}")
            print(f"Fornecedor: {produto['fornecedor']}")
            print(f"Descrição: {produto['descricao']}")
            print()

    def consultar_produto(self, codigo):
        # Verifica se o produto existe
        if not self.produto_existe(codigo):
            return "Produto não encontrado"

        # Exibe o produto e seus atributos
        for produto in self.produtos:
            if produto["codigo"] == codigo:
                print(f"Código: {produto['codigo']}")
                print(f"Nome: {produto['nome']}")
                print(f"Fornecedor: {produto['fornecedor']}")
                print(f"Descrição: {produto['descricao']}")

    def produto_existe(self, codigo):
        # Verifica se o código do produto já existe
        for produto in self.produtos:
            if produto["codigo"] == codigo:
                return True
        return False


# Exemplo de utilização
sistema = Sistema()

while True:
    print("\nMenu Principal:")
    print("1 - Adicionar produto")
    print("2 - Deletar produto")
    print("3 - Atualizar produto")
    print("4 - Listar produtos")
    print("5 - Consultar produto")
    print("6 - Sair")

    opcao = input("Digite a opção desejada: ")

    if opcao == '1':
        codigo = int(input("Digite o código do produto: "))
        nome = input("Digite o nome do produto: ")
        fornecedor = input("Digite o nome do fornecedor: ")
        descricao = input("Digite a descricao do produto: ")
        sistema.adicionar_produto(codigo, nome, fornecedor, descricao)
    elif opcao == '2':
        codigo = int(input("Digite o código do produto: "))
        sistema.deletar_produto(codigo)
    elif opcao == '3':
        codigo = int(input("Digite o código do produto: "))
        novo_nome = input("Digite o novo produto: ")
        novo_fornecedor = input("Digite o novo fornecedor: ")
        nova_descricao = input("Digite a nova descricao do produto: ")
        sistema.fazer_update_produto(codigo, novo_nome, novo_fornecedor, nova_descricao)
    elif opcao == '4':
        sistema.listar_produtos()
    elif opcao == '5':
        codigo = int(input("Digite o código do produto: "))
        sistema.consultar_produto(codigo)
    elif opcao == '6':
        break
    else:
        print("Opção inválida!")
